                <StackLayout BindableLayout.ItemsSource="{Binding ListCateDrinks}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                              
                                <StackLayout
                        Margin="20,10,0,0"
                        HorizontalOptions="StartAndExpand"
                        Orientation="Horizontal">
                                    <ImageButton
                            BackgroundColor="#f0daaa"
                            CornerRadius="50"
                            HeightRequest="35"
                            Source="{Binding CategoryImage}"
                            WidthRequest="35" />
                                    <Label
                            FontAttributes="Bold"
                            FontSize="Large"
                            Text="{Binding CategoryName}" />
                                </StackLayout>
                                <StackLayout x:Name="lst_drink" BindableLayout.ItemsSource="{Binding ListDrinkInfo}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>


                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="0.5*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Image
                                            Grid.Row="0"
                                            Grid.RowSpan="4"
                                            Grid.Column="0"
                                            Aspect="AspectFill"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            Source="{Binding DrinkImage}"
                                            VerticalOptions="Center"
                                            WidthRequest="100" />
                                                <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            Text="{Binding DrinkName}"
                                            VerticalOptions="Center" />
                                                <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            FontSize="15"
                                            Text="{Binding DrinkPrice, StringFormat='{0:#,0}đ'}" />
                                                <ImageButton
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Padding="10"
                                            BackgroundColor="Orange"
                                            CornerRadius="50"
                                            HeightRequest="35"
                                            HorizontalOptions="Center"
                                            Source="plus.png"
                                            VerticalOptions="Center"
                                            WidthRequest="35"
                                            />
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SelectedDrinkCommand, Source={x:Reference orderpage}}" CommandParameter="{Binding .}" />
                                                </Grid.GestureRecognizers>
                                            </Grid>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>

                                </StackLayout>
                            </StackLayout>

                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>

                <!--  Carousel Đặt gần đây  -->
                <StackLayout Margin="20,0,0,0" HeightRequest="370">
                    <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal">

                        <ImageButton
                            BackgroundColor="#f0daaa"
                            CornerRadius="50"
                            HeightRequest="35"
                            Source="coffee_cup.jpg"
                            WidthRequest="35" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Large"
                            Text="Đặt gần đây" />

                    </StackLayout>

                    <ScrollView Orientation="Horizontal" HorizontalOptions="Fill" HorizontalScrollBarVisibility="Never" >
                        <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding ListBanner}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="5,0">
                                        <Frame Padding="0" CornerRadius="10">
                                            <Image
                                                HorizontalOptions="Fill"
                                                Source="{Binding DrinkImage}"
                                                VerticalOptions="Fill"
                                                WidthRequest="180" />

                                        </Frame>
                                        <Label Text="{Binding DrinkName}" FontAttributes="Bold" FontSize="Large" Margin="0,0,0,10" />
                                        <Label Text="{Binding DrinkPrice, StringFormat='{0:#,0}'}" FontSize="18" />
                                        <Frame Padding="0" CornerRadius="10" VerticalOptions="Center">
                                            <Button
                                               
                                                BackgroundColor="Orange"
                                                Text="Chọn"
                                                TextColor="White" />
                                        </Frame>

                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>

               

            </StackLayout>
        </ScrollView>
    </StackLayout>


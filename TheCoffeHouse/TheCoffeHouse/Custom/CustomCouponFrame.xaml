<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheCoffeHouse.Custom.CustomCouponFrame">
  <ContentView.Content>
        <StackLayout Orientation="Horizontal" BackgroundColor="White" Margin="10" Padding="10,0">
            <Image x:Name="ImageButton" Source="User_active.png" WidthRequest="80" HeightRequest="80"></Image>
            <Label HeightRequest="100" WidthRequest="2" Margin="20,0,20,0" BackgroundColor="Black"></Label>
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                <Label x:Name="TitleCoupon" Text="Giảm 15%"  FontSize="Medium" TextColor="Black" LineBreakMode="TailTruncation"></Label>
                <Label x:Name="DateCoupon" Text="Hết hạn trong 5 ngày" TextColor="DarkOrange" VerticalOptions="EndAndExpand" Margin="0, 20, 0, 0"></Label>
            </StackLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>
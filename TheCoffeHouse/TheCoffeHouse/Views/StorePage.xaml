                <StackLayout
                    x:Name="listStore"
                    Margin="10"
                    BindableLayout.ItemsSource="{Binding ListStore}"
                    
                   >
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>

                            <Frame
                                    Margin="0,10"
                                    Padding="10,25"
                                    BorderColor="Transparent"
                                    CornerRadius="10">
                                <Grid  ColumnSpacing="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                            Grid.Row="0"
                                            Grid.RowSpan="4"
                                            Grid.Column="0"
                                            Aspect="AspectFill"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            Source="{Binding StoreImage}"
                                            VerticalOptions="Center"
                                            WidthRequest="95" />
                                    <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontSize="15"
                                            Text="{Binding StoreName}"
                                            VerticalOptions="End" />
                                    <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Grid.RowSpan="2"
                                            FontAttributes="Bold"
                                            FontSize="17"
                                            Text="{Binding StoreAddress}" />
                                    <Label
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            Text="{Binding StoreDistance}"
                                            VerticalOptions="Start" />
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SelectedStoreCommand, Source={x:Reference Name=listStore}}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

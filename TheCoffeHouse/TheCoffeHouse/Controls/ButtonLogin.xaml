<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="TheCoffeHouse.Controls.ButtonLogin"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Frame
            x:Name="frame"
            BorderColor="Gray"
            CornerRadius="10"
            HasShadow="False">
            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="10">
                <Image
                    x:Name="image"
                    VerticalOptions="Center"
                    WidthRequest="30" />
                <Label
                    x:Name="label"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
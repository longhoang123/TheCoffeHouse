                <!--  Container category  -->
                <FlexLayout
                    Margin="20,0,0,5"
                    Padding="0"
                    AlignItems="Start"
                    Direction="Row"
                    HorizontalOptions="StartAndExpand"
                    JustifyContent="SpaceBetween"
                    Wrap="Wrap"
                    BindableLayout.ItemsSource="{Binding ListCategory}"
                    x:Name="postList"
                    >

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout
                            Margin="0,10,20,10"
                            HorizontalOptions="Center"
                            Orientation="Vertical"
                            VerticalOptions="Center">
                                <Frame CornerRadius="50"  WidthRequest="70" HeightRequest="70" Padding="0">
                                    <Image
                                Margin="-5"
                                BackgroundColor="#f0daaa"
                                Source="{Binding CateImage}"
                                />
                                </Frame>
                                <Label HorizontalOptions="Center" Text="{Binding CateName}" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SelectedCateCommand, Source={x:Reference Name=postList}}" CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>

                        </DataTemplate>
                    </BindableLayout.ItemTemplate>


                </FlexLayout>

                <!--  Title each category  -->
                <StackLayout BackgroundColor="#f0daaa" HeightRequest="260">
                    <StackLayout
                        Margin="20,10,10,5"
                        HorizontalOptions="StartAndExpand"
                        Orientation="Horizontal">
                        <ImageButton
                            Margin="0,0,5,0"
                            BackgroundColor="Transparent"
                            HeightRequest="30"
                            Source="thunder.jpg"
                            WidthRequest="30" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="Bộ sưu tập" />
                    </StackLayout>
                    <Image
                        BackgroundColor="Transparent"
                        HeightRequest="190"
                        Source="bannerPR.png" />
                </StackLayout>

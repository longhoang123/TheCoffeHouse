<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheCoffeHouse.Custom.CustomOrderFrame">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BackgroundColor="White" Margin="10" Padding="0,5">
            <Frame CornerRadius="8" Padding="0" Margin="0">
                <Image x:Name="Image" Source="User_active.png" WidthRequest="70" HeightRequest="70"></Image>
            </Frame>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="10,0,0,0">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Mã đơn hàng:" FontSize="18" FontAttributes="Bold"/>
                    <Label x:Name="IDOrder" Text="Coolmate"  FontSize="Medium" TextColor="Black" FontAttributes="Bold"></Label>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Ngày đặt hàng:" FontSize="15" FontAttributes="Bold"/>
                    <Label x:Name="DateOrder" Text="12/06/2021" FontSize="15" FontAttributes="Italic"/>
                </StackLayout>
                <Label x:Name="Price" Text="99"  FontSize="16" TextColor="DarkGreen" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"></Label>
            </StackLayout>
        </StackLayout>
    </ContentView.Content> 
</ContentView>
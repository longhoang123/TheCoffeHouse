<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TheCoffeHouse.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:TheCoffeHouse.Controls"
    xmlns:prism="http://prismlibrary.com"
    xmlns:renderers="clr-namespace:TheCoffeHouse.Renderers"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid RowDefinitions="3*, 7*" VerticalOptions="Fill">
            <Image ScaleX="1.2" Source="bg_login.jpg" />
            <Image
                Margin="15"
                HeightRequest="30"
                HorizontalOptions="End"
                Source="cancel.png"
                VerticalOptions="Start"
                WidthRequest="30">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Image.GestureRecognizers>
            </Image>
            <Frame
                Grid.Row="1"
                Margin="0,-20"
                BackgroundColor="White"
                CornerRadius="20">
                <StackLayout Margin="0,0,0,20" Spacing="15">
                    <Label HorizontalOptions="Center" Text="Chào mừng bạn đến với" />
                    <Image
                        Margin="0,-50"
                        HeightRequest="150"
                        Source="login_logo.png"
                        WidthRequest="250" />
                    <Frame
                        Padding="20"
                        BorderColor="{StaticResource light_gray}"
                        CornerRadius="10"
                        HasShadow="False">
                        <Grid ColumnDefinitions="auto, 30, auto, *">
                            <Image
                                Source="vietnam.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                Text="+84"
                                TextColor="{StaticResource dark_gray}"
                                VerticalOptions="Center" />
                            <Image
                                Grid.Column="2"
                                HeightRequest="15"
                                Source="line.png" />
                            <renderers:CustomEntry
                                Grid.Column="3"
                                Margin="10,0,0,0"
                                Placeholder="Nhập số điện thoại"
                                Text="{Binding PhoneNumber}"
                                TextColor="Black" />

                        </Grid>
                    </Frame>
                    <Frame
                        Padding="20"
                        BorderColor="{StaticResource light_gray}"
                        CornerRadius="10"
                        HasShadow="False">
                        <Grid ColumnDefinitions="auto, 30, auto, *">
                            <Image
                                Source="padlock.png"
                                VerticalOptions="Center"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                Text="***"
                                TextColor="{StaticResource dark_gray}"
                                VerticalOptions="Center" />
                            <Image
                                Grid.Column="2"
                                HeightRequest="15"
                                Source="line.png" />
                            <renderers:CustomEntry
                                Grid.Column="3"
                                Margin="10,0,0,0"
                                IsPassword="True"
                                Placeholder="Nhập mật khẩu"
                                Text="{Binding Password}"
                                TextColor="Black" />

                        </Grid>
                    </Frame>
                    <Frame BackgroundColor="{StaticResource MainColor}" CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LoginCommand}" />
                        </Frame.GestureRecognizers>
                        <Label
                            HorizontalOptions="Center"
                            Text="Đăng nhập"
                            TextColor="White" />
                    </Frame>

                    <Grid Margin="0,15" HorizontalOptions="Fill">
                        <BoxView
                            Margin="0,15"
                            BackgroundColor="{StaticResource light_gray}"
                            HeightRequest="1"
                            WidthRequest="1000" />
                        <Label
                            Padding="3"
                            BackgroundColor="White"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="HOẶC"
                            TextColor="{StaticResource dark_gray}"
                            VerticalOptions="Center" />
                    </Grid>

                    <controls:CustomImageButton
                        BackgroundColor="{StaticResource facebook_color}"
                        ButtonImage="facebook.png"
                        Text="Tiếp tục bằng Facebook"
                        TextColor="White" />
                    <controls:CustomImageButton
                        BackgroundColor="White"
                        ButtonImage="google.png"
                        Text="Tiếp tục bằng Google"
                        TextColor="Black" />
                </StackLayout>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage>
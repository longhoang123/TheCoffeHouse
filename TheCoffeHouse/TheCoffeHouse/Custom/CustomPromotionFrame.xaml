<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheCoffeHouse.Custom.CustomPromotionFrame">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BackgroundColor="White" Margin="10" Padding="0,5">
            <Frame CornerRadius="8" Padding="0" Margin="0">
                <Image x:Name="ImageButton" Source="User_active.png" WidthRequest="70" HeightRequest="70"></Image>
            </Frame>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="10,0,10,0">
                <Label x:Name="Brand" Text="Coolmate"  FontSize="Medium" TextColor="Black" FontAttributes="Bold"></Label>
                <Label x:Name="Description" Text="Coolmate 100k" TextColor="Black" LineBreakMode="WordWrap" FontSize="Medium"></Label>
            </StackLayout>
            <StackLayout HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand">
                <Button x:Name="NumPoint" Text="99"  FontSize="Small" TextColor="DarkGreen" BackgroundColor="LimeGreen" CornerRadius="20" WidthRequest="50" HeightRequest="40" IsEnabled="False"></Button>
                <Label Text="BEAN" FontSize="Medium" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>